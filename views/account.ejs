<!doctype html>
<html>
<head>
<meta name="viewport" charset="UTF-8" content="width=device-width, initial-scale=1">
  <title><%= title %></title>

  <%- include partials/head %>
</head>
<body ng-app="swingApp" >
<%- include partials/header %>
<div class="container" id="registerform">
<br>
<br>
<h3>Account</h3>
   <div class="text-center"><a href="/logout"><img src="images/img 8.png" width="5" height="25"></a></div>
<div id="settingsDiv">
<br><br>
<a class="btn btn-primary settingButton" href="#" role="button" onclick="setStyleSheet('stylesheets/main1.css')">
Heaven</a><br><br>
<a class="btn btn-primary settingButton" href="#" role="button" onclick="setStyleSheet('stylesheets/main2.css')">
Magic</a><br><br>
<a class="btn btn-primary settingButton" href="#" role="button" onclick="setStyleSheet('stylesheets/main3.css')">
Intellect</a><br><br>
<a class="btn btn-primary settingButton" href="#" role="button" onclick="setStyleSheet('stylesheets/main5.css')">
Harmony</a><br><br>
<a class="btn btn-primary settingButton" href="#" role="button" onclick="setStyleSheet('stylesheets/main4.css')">
Sunshine</a><br><br>
</div>
<div class="row">
<div class="col-xs-3">
<p>Username</p>
</div>
<div class="col-xs-9"> 
<p> <%= user.username %>
</p>
</div>

</div>
<div class="row">
<div class="col-xs-3">
<p>Email</p>
</div>
<div class="col-xs-9"> 
<p> <%= user.email %>
	
</p>
</div>

</div>

<form method="POST" action="/account/<%= user.id %>" id="register_form">


<div class="row">
<div class="col-xs-3">
<img src="images/email.png" height="20" width="20">
</div>
<div class="col-xs-9">

<input type="text" name="email" id="email"  placeholder="Update your Email" class="registerinput"/>

</div>

</div>
<hr>                       

<div class="row">
<div class="col-xs-3">
<img src="images/lock.png" height="20" width="20">
</div>
<div class="col-xs-9"> 
<input type="password" name="password" id="password"  placeholder="Update your Password" class="registerinput"/>
</div>

</div>
<hr>

<div class="row">
<div class="col-xs-3">
<img src="images/lock.png" height="20" width="20">
</div>
<div class="col-xs-9">
<input type="password" name="confirm" id="confirm"  placeholder="Confirm your Password" class="registerinput"/>
</div>
</div>
<hr>
<br>
<input type="submit" class="btn mainButton" value="Submit">


<!-- Success message -->
<!-- <div class="alert alert-success" role="alert" id="success_message">Thanks for contacting us, we will get back to you shortly.</div>
 -->

</form>
</div>
         
<%- include partials/footer %>
</body>
  <script src="javascripts/bootstrap.js"></script>
        <script src="javascripts/main.js"></script>

</html>